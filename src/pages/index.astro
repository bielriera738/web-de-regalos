---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import { categories } from "../data/categories";
---

<Layout title="Regaloteca | Encuentra el Regalo Perfecto">
	<Hero
		title="Bienvenido a Regaloteca"
		subtitle="Tu fuente de inspiración para encontrar los mejores regalos de Amazon."
	/>

	<section class="container mb-xl">
		<h2 class="text-center mb-md">Categorías Destacadas</h2>
		<div class="categories-grid">
			{
				categories.map((category) => (
					<a href={`/categoria/${category.id}`} class="category-card">
						<div class="content">
							<h3>{category.name}</h3>
							<p>{category.description}</p>
							<span class="btn-link">Ver Regalos &rarr;</span>
						</div>
					</a>
				))
			}
		</div>
	</section>

	<section class="container text-center mb-xl">
		<h2>¿Buscas algo especial?</h2>
		<p class="mb-md">
			Explora nuestra colección curada de regalos originales para madres.
		</p>
		<a href="/regalos-originales-para-madres" class="btn btn-primary"
			>Ver Colección para Madres</a
		>
	</section>
</Layout>

<style>
	.categories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--spacing-md);
	}

	.category-card {
		background: white;
		border-radius: var(--radius-md);
		padding: var(--spacing-lg);
		text-align: center;
		box-shadow: var(--shadow-sm);
		transition: all 0.3s ease;
		border: 1px solid transparent;
		display: block;
		text-decoration: none;
		color: inherit;
	}

	.category-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-md);
		border-color: var(--color-primary-light);
	}

	.category-card h3 {
		color: var(--color-secondary);
		margin-bottom: var(--spacing-xs);
		font-size: 1.2rem;
		line-height: 1.4;
	}

	.btn-link {
		display: inline-block;
		margin-top: var(--spacing-sm);
		color: var(--color-primary);
		font-weight: 600;
	}
</style>
